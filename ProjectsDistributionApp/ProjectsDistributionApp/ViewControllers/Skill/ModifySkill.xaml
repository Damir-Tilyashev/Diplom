<Window x:Class="ProjectsDistributionApp.ViewControllers.ModifySkill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectsDistributionApp.ViewControllers"
        mc:Ignorable="d"
        Title="ModifySkill" Height="200" Width="400">
    <Grid>
        <TextBlock
            VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,20,0,0">
            Название навыка
        </TextBlock>
        <TextBox x:Name="SkillName" 
                 VerticalAlignment="Top" 
                 HorizontalAlignment="Center" Margin="0,40,0,0" Width="160"/>
        <Button Content ="Изменить" Click="Change"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left" Margin="40,0,0,40"/>
        <Button Content ="Удалить" Click="Delete"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left" Margin="180,0,0,40"/>
        <Button Content ="Отмена" Click="Cancel"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left" Margin="320,0,0,40"/>
    </Grid>
</Window>
