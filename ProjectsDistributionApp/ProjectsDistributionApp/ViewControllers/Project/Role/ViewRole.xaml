<Window x:Class="ProjectsDistributionApp.ViewControllers.ViewRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectsDistributionApp.ViewControllers"
        mc:Ignorable="d"
        Title="ViewRole" Height="600" Width="450">
    <Grid>
        <StackPanel>
            <TextBlock Text="Роль:" Margin="5,5,0,0"/>
            <TextBlock x:Name="RoleName" 
                       HorizontalAlignment="Left"
                       Margin="5,5,0,0" Width="100"/>
            <TextBlock Text="Требуемые Навыки:" Margin="5,5,0,0"/>
            <ListBox x:Name="Skills"
                     HorizontalAlignment="Center"
                     Margin="0,5,0,0"
                     Height="200"
                     Width="400"/>
            <TextBlock Text="Сотрудник:" 
                       HorizontalAlignment="Left"
                       Margin="5,5,0,0" Width="100"/>
            <TextBlock x:Name="EmployeeName"
                       HorizontalAlignment="Left"
                       Margin="5,5,0,0" Width="400"/>
        </StackPanel>
    </Grid>
</Window>