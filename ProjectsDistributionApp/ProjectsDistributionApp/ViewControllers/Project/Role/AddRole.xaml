<Window x:Class="ProjectsDistributionApp.ViewControllers.AddRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectsDistributionApp.ViewControllers"
        mc:Ignorable="d"
        Title="AddRole" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Описание роли"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="10,5,0,0"/>
            <TextBox x:Name="MaxLoad" Width="600" Height="150"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="10,5,0,0"/>
            <ListBox x:Name="SkillsList" 
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="10,5,0,0" 
                     Height="100"
                     Width="450">
            </ListBox>
            <Button Content="Добавить навык"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
